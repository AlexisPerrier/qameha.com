<div class="clearfix pageContent modulePage recruitingModule">
  <div class="fixedWidthContent clearfix">
    <div id="assets">
      <h1 style="height : 80px; ">
        <%= image_tag "recruiting_intro_icon.png", :style => "float:left;" %>
        <br />
        <span style="padding-left:40px;">
          "An application designed by HR professionals"
        </span>
      </h1>

      <div class="moduleAsset" id="asset1">
        <%= t "recruiting_asset1_content" %>
      </div>
      <div class="moduleAsset" id="asset2">
        <%= t "recruiting_asset2_content" %>
      </div>
      <div class="moduleAsset" id="asset3">
        <%= t "recruiting_asset3_content" %>
      </div>
    </div>

    <div id="testimonials">
      <div id="top"></div>
      <p>
        <%= image_tag "open_quote_light.jpg" %>
        <span id="quote_0" class="quote"><%= t "recruiting_quote" %></span>
        <%= image_tag "close_quote_light.jpg", :id => "closeQuote" %>
      </p>
      <div id="client">
        <span class="client" id="client_0"><%= t "client_recruiting" %></span>
      </div>

      <div id="bottom"></div>
    </div>
  </div>
  <%= render :partial => "saas_assets"%>
