<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
  <head>
    <title><%= t "website_title" %></title>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8"/>
    <%= stylesheet_link_tag "reset", :media => "all" %>
    <%= stylesheet_link_tag "style", :media => "all" %>

    <style type="text/css">
      .<%= controller.action_name %>{font-weight:bold;}
    </style>
    <%= javascript_include_tag "jquery-1.3.2.min" %>
    <%= javascript_include_tag "jquery-ui-1.7.2.custom.min" %>
    <%= javascript_include_tag "application" %>

    <!--[if lt IE 7]>
	<script src="http://ie7-js.googlecode.com/svn/version/2.0(beta3)/IE7.js" type="text/javascript"></script>
	<![endif]-->
    <!--[if lt IE 8]>
    <%= stylesheet_link_tag "ie", :media => "all" %>
	<![endif]-->
<%#= include_tiny_mce_if_needed %>
  </head>
  <body class="<%= t "language_class" %>">
    <% if @display_promo %>
      <div id="promoWrapper">
        <%= link_to "", recruitment_agencies_path %>
        <div id="promo">
        </div>
      </div>
    <% end %>

    <div id="headest">
      <div class="fixedWidthContent">
        Qameha | 
        <%= link_to t("recruiting"), recruiting_path %>
        <%= link_to t("evaluation"), evaluation_path %>
        <%= link_to t("mobility"), mobility_path %>
      </div>
    </div>

    <div id="header" class="clearfix">
      <div class="fixedWidthContent">
        <div id="logo">
          <%= link_to "", "/", :id => "logo", :title => t("qameha_baseline") %>
        </div>
        <div id="menu">
          <%= link_to t("contact"), contact_path, :class => "contact" %> |
          <%= link_to t("team"), team_path, :class => "team" %> |
          <%= link_to t("join"), jobs_path, :class => "jobs" %>
          |
          <%= link_to t("blog"), "/blog" %>
          |
          <%= link_to "L'enquête", enquete_path %>

        </div>
      </div>
    </div>

    <div id="subZone" class="clearfix">
      <div class="fixedWidthContent">
        <%= render :partial => "header_#{controller.action_name}"%>
      </div>
    </div>

    <%= yield %>

    <div id="bottomLoop"></div>
    <div id="footer" class="clearfix">

      <div class="fixedWidthContent">
        <%= link_to "", recruiting_path, :id => "recruiting", :class => "module"%>
        <%= link_to "", evaluation_path, :id => "evaluation", :class => "module"%>
        <%= link_to "", mobility_path, :id => "mobility", :class => "module"%>
        <div id="endNavigation">
          <ul>
            <li>
              <%= link_to t("contact"), contact_path %>
            </li>
            <li>
              <%= link_to t("team"), team_path %>
            </li>
            <li>
              <%= link_to t("join"), jobs_path %>
            </li>
            <li>
              <%= link_to t("blog"), "/blog" %>
            </li>
            <li>
              <%= link_to "L'enquête", enquete_path %>
            </li>
          </ul>
          <%= link_to image_tag("logo_telecomparis.gif", :width => 50, :alt=> "Telecom ParisTech Incubateur"), "http://entrepreneurs.telecom-paristech.fr", :target =>"_blank", :title => "L'incubateur de Telecom ParisTech" %>
          <%= link_to image_tag("scientipole.jpg", :height => 50, :alt=> "Scientipole Initiative"), "http://www.scientipole-initiative.org/", :target =>"_blank", :title => "Scientipole Initiative" %>
        </div>
      </div>
    </div>

    <script type="text/javascript">
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <script type="text/javascript">
      try {
        var pageTracker = _gat._getTracker("UA-8441737-1");
        pageTracker._trackPageview();
      } catch(err) {}</script>

  </body>
</html>