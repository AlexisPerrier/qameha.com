<div id="blog_post" style=" width : 80%; ">
  <h1>
    <%= link_to post.title, {:controller => 'blogs', :action => 'show', :permalink => post.permalink} %>
<%#= post.title %>
  </h1>
  <p>
    <%= post.excerpt unless post.excerpt.blank? %>
  </p>

  <p class="post_signature">
    By Qameha,
    <%= l post.published_at.to_date, :format => :short unless post.published_at.nil? %>
  </p>
  <div style="border-bottom: 1px dashed #CCC; width : 100%; padding : 10px 0;"></div>
</div>

